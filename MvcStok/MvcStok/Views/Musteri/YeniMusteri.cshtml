@model MvcStok.Models.Entity.TBLMUSTERILER
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">

    <div>
        <label>Musteri Adi</label>
        <input type="text" class="form-control" name="MUSTERIAD" />

        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:green" })
    </div>

    <div>
        <label>Musteri Soyadi</label>
        <input type="text" class="form-control" name="MUSTERISOYAD" />
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Musteri Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Musteri Ekleme Islemi Yapildi...!');
        });
    </script>
</form>

